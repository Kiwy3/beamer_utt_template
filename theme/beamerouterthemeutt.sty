                 \textcolor{inria-noir}{%
                   % \insertdate
                   \beamer@shortdate
                   \hfill
                   \relax
                      %\smash{\raisebox{-0.1\footerheight}{}}
                   %\fi
                   \kern2em\parbox{1em}{\raggedleft\insertframenumber}
                 }
               }
          }
       }
}

