\defbeamertemplate*{headline}{inria}
{%
      \leavevmode
      % empty
}



\defbeamertemplate*{footline}{inria}
  {%
  \ifnum\thepage>2 % classical page
    \leavevmode
    \hbox{%
      \begin{beamercolorbox}[wd = \paperwidth, ht=\footerheight, colsep=0pt]{section in head/foot}
        
        \vspace*{4pt}
        \hspace*{\hmargin}
        \small{\beamer@shortdate}
                   \hfill 
        \vspace*{4pt}          
        \raisebox{3pt}{\footnotesize\insertnavigation{0.7\paperwidth}}
        \hfill
        \small\insertframenumber
        \hspace*{\hmargin}        
      \end{beamercolorbox}%
    }%
  \else
      \ifnum \thepage <2 % title page

      \begin{beamercolorbox}[wd = \paperwidth, ht=\footerheight, colsep=0pt]{section in head/foot}
        \vspace*{5pt}
        \hspace*{\hmargin} 
        \large
        { \text{Semester}  \semester}
        \hfill
        \course
        \hspace*{\hmargin}

        
        
        
      \end{beamercolorbox}%
      \else % Summary

      \fi
  \fi
  }


