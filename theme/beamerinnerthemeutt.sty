\defbeamertemplate*{title page}{inria}[1][]{%
  %
  % reset to (0,0) 
  % - only horizontal, which is set to fullpageinnerhmargin
  % - vertical is already set to 0
  %
  \hspace*{-\fullpageinnerhmargin}%
  %
  \begin{tikzpicture}[%
            title/.style={text=inria-noir,
                     anchor=north west,align=left,
                     text width={\dimexpr\paperwidth-2\hmargin},
                     inner sep=0pt,outer sep=0pt},
       mainlogo/.style={anchor=north west,
                     outer sep=0pt, inner sep=0pt},
     ]
   \useasboundingbox (0,0) rectangle (\paperwidth,\paperheight);
   \node [mainlogo] at (0,\paperheight+1) {\titlelogo};
   \node [title] at (\fullpageinnerhmargin+0.15\textwidth,.66\paperheight) {%
          {\Huge\textbf{\inserttitle}}\\[3ex]
          {\Large \insertsubtitle}\\[2ex]
          {\insertauthor}
    };
    \node [anchor = south east,align = right] at (\paperwidth - \hmargin,\footerheight)
      {\large \semester \text{ -} \course};
    %\shade[left color=bleu_utt_fonce, right color=bleu_utt_clair] 
    %(\fullpageinnerhmargin+0.15\textwidth,.7\paperheight - 1.25cm) 
    %rectangle (\fullpageinnerhmargin+0.15\textwidth+3cm,.7\paperheight - 1.35cm);
  \end{tikzpicture}
}


