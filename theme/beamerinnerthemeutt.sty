\newlength{\titleH}

\defbeamertemplate*{frametitle}{inria}[1][]{%
  % textblock 

  \hspace*{-\fullpageinnerhmargin}%
  %
  \begin{tikzpicture}[%
    mainlogo/.style={anchor=north west,
                outer sep=0pt, inner sep=0pt},
    ]
    \useasboundingbox (0,0) rectangle (\paperwidth,\paperheight);
    \node [mainlogo] at (0,\paperheight+0.1cm) {\titlelogo};
    \end{tikzpicture}

  \vspace{-\paperheight+\banniereheight}

  \begin{textblock*}{\textwidth}(\hmargin+\anglewidth,\vmargin+\banniereheight-0.1cm)
      \textbf{\LARGE \insertframetitle}
  \end{textblock*}

\settoheight{\titleH}{\insertframetitle}
\addtolength{\titleH}{\angleheight}
\vspace*{1\titleH}

}


